// BIP-375 Multi-Signer GUI
// 3-party signing workflow visualization

import { Button, VerticalBox, HorizontalBox, ScrollView, Palette } from "std-widgets.slint";

// Data structures
export struct PsbtField {
    field-name: string,
    field-type: string,
    key-preview: string,
    value-preview: string,
    is-highlighted: bool,
    map-index: int,
}

export struct TransactionSummary {
    total-input: int,
    total-output: int,
    fee: int,
    num-inputs: int,
    num-outputs: int,
}

export struct EcdhCoverage {
    inputs-with-ecdh: int,
    total-inputs: int,
    percentage: float,
}

export struct InputState {
    index: int,
    signer-name: string,
    has-ecdh: bool,
    has-dleq: bool,
    has-sig: bool,
}

export struct ValidationSummary {
    dleq-valid: bool,
    all-signed: bool,
    scripts-computed: bool,
    tx-extracted: bool,
}

component MenuButton inherits Button {
    preferred-height: 40px;
    max-height: 40px;
}

component PSBTFields inherits HorizontalBox {
    padding: 8px;
    spacing: 8px;

    in property <PsbtField> field;

    Text {
        text: field.field-type;
        font-size: 12px;
        color: #666666;
        vertical-alignment: center;
        max-width: 40px;
    }

    if field.map-index >= 0: Text {
        text: "[" + field.map-index + "]";
        font-size: 12px;
        color: #888888;
        font-weight: 700;
        vertical-alignment: center;
        horizontal-alignment: left;
        max-width: 30px;
    }

    TextInput {
        text: field.field-name;
        font-size: 14px;
        color: #2c2c2c;
        read-only: true;
        horizontal-alignment: left;
        max-width: 300px;
    }

    VerticalBox {
        alignment: LayoutAlignment.center;
        spacing: 2px;
        padding: 0px;
        horizontal-stretch: 1;

        if field.key-preview != "": TextInput {
            read-only: true;
            text: "key: " + field.key-preview;
            font-size: 10px;
            color: #666666;
            horizontal-alignment: right;
        }

        TextInput {
            read-only: true;
            text: field.value-preview;
            font-size: 12px;
            color: #666666;
            horizontal-alignment: right;
        }
    }
}

// Main application component
