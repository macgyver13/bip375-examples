                        }

                        MenuButton {
                            text: "2. Bob Signs\n(Signer)";
                            enabled: workflow-state == "PartialSigned(1)";
                            clicked => { root.bob-signs(); }
                        }

                        MenuButton {
                            text: "3. Charlie Finalizes\n(Signer + Extractor)";
                            enabled: workflow-state == "PartialSigned(2)";
                            clicked => { root.charlie-finalizes(); }
                        }
                    }

                    Rectangle { height: 1px; background: #666666; }

                    // Export button
