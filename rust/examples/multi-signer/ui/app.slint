                    }

                    Text {
                        text: validation.tx-extracted ? "âœ… TX Extracted" : "âšª TX Pending";
                        color: validation.tx-extracted ? #33cc33 : #666666;
                        font-size: 12px;
                    }
                }

                if !has-psbt: Text {
                    text: "No transaction data";
                    color: #808080;
                }
            }
        }
    }
}
