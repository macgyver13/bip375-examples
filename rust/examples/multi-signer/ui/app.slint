                          workflow-state == "PartialSigned(2)" ? "ðŸŸ¡ Partial (2/3)" :
                          workflow-state == "FullySigned" ? "ðŸŸ¢ Fully Signed" :
                          workflow-state == "Finalized" ? "ðŸŸ¢ Finalized" :
                          workflow-state == "TransactionExtracted" ? "âœ… Extracted" :
                          "âšª Ready";
                    font-size: 16px;
                    font-weight: 700;
                }
            }
        }

        HorizontalBox {
            vertical-stretch: 1;
            padding: 0px;

            // Left panel - Workflow steps
            Rectangle {
                width: 350px;
                background: #444444;

                VerticalBox {
                    alignment: LayoutAlignment.end;
                    padding: 16px;
                    spacing: 16px;

                    // ECDH Coverage indicator
                    if has-psbt: VerticalBox {
                        spacing: 8px;

                        Text {
                            text: "ECDH Coverage:";
                            font-size: 16px;
                            font-weight: 700;
                        }

                        HorizontalBox {
                            spacing: 8px;

                            Text {
                                text: ecdh-coverage.inputs-with-ecdh + "/" + ecdh-coverage.total-inputs;
                                font-size: 18px;
                                color: ecdh-coverage.percentage >= 100.0 ? #33cc33 : #e6b300;
                                font-weight: 700;
                            }

                            Text {
                                text: "(" + round(ecdh-coverage.percentage) + "%)";
                                font-size: 14px;
                                color: #808080;
                            }
                        }

                        // Progress bar
                        Rectangle {
                            height: 20px;
                            background: #666666;
                            border-radius: 10px;

                            Rectangle {
                                width: parent.width * ecdh-coverage.percentage / 100.0;
                                x: 0px;
                                background: ecdh-coverage.percentage >= 100.0 ? #33cc33 : #e6b300;
                                border-radius: 10px;
                            }
                        }
                    }

                    Rectangle { height: 1px; background: #666666; }

                    Text {
                        text: "Workflow Steps";
                        font-size: 24px;
                        font-weight: 700;
                    }

                    // Current state indicator
                    VerticalBox {
                        spacing: 8px;
                        alignment: LayoutAlignment.end;

                        Text {
                            text: "Current State:";
                            font-size: 16px;
                        }

                        Text {
                            text: workflow-state == "ConfiguringParties" ? "â— Configuring" :
                                  workflow-state == "PsbtCreated" ? "â— PSBT Created" :
                                  workflow-state == "PartialSigned(1)" ? "â— Partial (1/3)" :
                                  workflow-state == "PartialSigned(2)" ? "â— Partial (2/3)" :
                                  workflow-state == "FullySigned" ? "â— Fully Signed" :
                                  workflow-state == "Finalized" ? "â— Finalized" :
                                  workflow-state == "TransactionExtracted" ? "â— Extracted" :
